# InstantDB Configuration
# Copy this file to .env and fill in your actual values

# InstantDB App ID
INSTANT_APP_ID=your_instant_app_id_here
EXPO_PUBLIC_INSTANT_APP_ID=your_instant_app_id_here

# InstantDB Platform API Token (for creating tenant apps)
EXPO_PUBLIC_INSTANT_PLATFORM_TOKEN=your_platform_token_here

# Cloudflare R2 Configuration

# Cloudflare R2 Endpoint (your unique R2 endpoint URL)
EXPO_PUBLIC_R2_ENDPOINT=https://your-unique-id.r2.cloudflarestorage.com

# Cloudflare R2 Account ID
EXPO_PUBLIC_R2_ACCOUNT_ID=your_account_id_here

# Cloudflare R2 Bucket Name
EXPO_PUBLIC_R2_BUCKET_NAME=your_bucket_name_here

# Cloudflare R2 Access Key ID
EXPO_PUBLIC_R2_ACCESS_KEY_ID=your_access_key_here

# Cloudflare R2 Secret Access Key
EXPO_PUBLIC_R2_SECRET_ACCESS_KEY=your_secret_key_here

# Cloudflare R2 Region (usually 'auto' for R2)
EXPO_PUBLIC_R2_REGION=auto

# Optional: Custom domain for public URLs
# EXPO_PUBLIC_R2_CUSTOM_DOMAIN=your-custom-domain.com

# Development/Production Environment
NODE_ENV=development
